{
  "name": "test_migration",
  "version": "1.0.0",
  "description": "Tests database migration",
  "main": "src/server.ts",
  "scripts": {
    "compile": "npx tsc",
    "copy-files": "copyfiles --error --up 1 src/public/**/*.* build/",
    "copy-r": "xcopy \"src/public/**/*.*\" \"build/\"",
    "build": "npm run compile && npm run copy-files",
    "prettier": "prettier --config .prettierrc --write src/**/*.ts ",
    "lint": "eslint  \"src/**/*.ts\"  ",
    "start": "nodemon ./build/server localhost 3000",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./build --onSuccess \"nodemon ./build/server.js\" --onFailure \"echo Beep! Compilation Failed\"",
    "migrate": "db-migrate --env test up && db-migrate up",
    "test": "cross-env ENV=test && npx tsc && db-migrate --env test up && jasmine && db-migrate db:drop test"
  },
  "keywords": [
    "test",
    "db",
    "postgres"
  ],
  "author": "Kofi Nyarko Kumi",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^4.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/db-migrate-pg": "^0.0.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jasmine-spec-reporter": "^7.0.0",
    "pg": "^8.8.0"
  }
}
